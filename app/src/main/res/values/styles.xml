<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#46A6E4</item>
        <item name="colorPrimaryDark">#1a237a</item>
        <item name="colorAccent">#152079</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/btnstyle</item>
        <item name="colorButtonNormal">#1a237e</item>
        <item name="colorControlHighlight">#673ab7</item>
    </style>

    <style name="CustomAnimationButton" parent="@style/Widget.AppCompat.Button">
        <item name="colorButtonNormal">#1a237e</item>
        <item name="colorControlHighlight">#673ab7</item>
        <item name="android:stateListAnimator">@animator/firstanim</item>
    </style>

</resources>
